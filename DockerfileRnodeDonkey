FROM openjdk:11.0.11-9-jdk-oraclelinux7

RUN yum install -y ca-certificates

RUN update-ca-trust force-enable

RUN yum -y install https://github.com/rchain/rchain/releases/download/v0.11.0-alpha.2/rnode-0.11.0.alpha.2-1.noarch.rpm

ENV BOOTSTRAP="rnode://7b893c7a676877ad48ec56871c19e3b481e2a102@observer.testnet.rchain.coop?protocol=45400&discovery=45404"

ENV NETWORK="testnet02032020"

CMD /usr/bin/rnode run --bootstrap rnode://7b893c7a676877ad48ec56871c19e3b481e2a102@observer.testnet.rchain.coop?protocol=45400&discovery=45404 --network-id testnet02032020 --protocol-port 40400 --discovery-port 40404 --shard-name rchain --finalization-rate 1 --fault-tolerance-threshold -1 --synchrony-constraint-threshold 0.99