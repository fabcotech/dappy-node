{
  "name": "@fabcotech/dappy-node",
  "version": "3.27.1",
  "description": "Dappy main nodeJS program, stores the name records and provides a HTTP+TLS interface to interact with rnode",
  "author": "FABCO",
  "repository": "https://github.com/fabcotech/dappy-node.git",
  "main": "./dist/index.js",
  "scripts": {
    "test": "mocha -r ts-node/register 'src/**/*.spec.ts' 'src/**/*.spec.js'",
    "test:watch": "mocha -r ts-node/register -watch 'src/**/*.spec.ts' 'src/**/*.spec.js' -watch-files 'src/**/*.ts' 'src/**/*.js'",
    "lint": "eslint src --ext .ts",
    "copy-files": "copyfiles -u 1 src/bin/easyrnode/**/*.yml src/bin/easyrnode/**/*.sh dist/",
    "build": "rm -rf dist && tsc && npm run copy-files",
    "start": "node dist/index.js",
    "start:dev:rchain": "NODE_ENV=development DAPPY_NODE_ZONE_PROVIDER=rchain ts-node src/index.ts",
    "start:dev:memory": "NODE_ENV=development DAPPY_NODE_ZONE_PROVIDER=memory ts-node src/index.ts",
    "deploy-name-system": "./bin/dappy-deploy-name-system",
    "prepare": "husky install"
  },
  "files": [
    "dist/",
    "docker/",
    "bin/"
  ],
  "bin": {
    "dappy-deploy-name-system": "./bin/dappy-deploy-name-system",
    "dappy-node": "./bin/dappy-node",
    "easyrnode": "./bin/easyrnode"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "dependencies": {
    "@fabcotech/rchain-token": "^17.0.7",
    "@fabcotech/rchain-toolkit": "3.0.1",
    "@sentry/node": "^6.2.3",
    "@sentry/tracing": "^6.2.3",
    "ajv": "^6.10.0",
    "blakejs": "^1.2.1",
    "body-parser": "^1.19.0",
    "dns-packet": "^5.3.1",
    "dotenv": "6.2.0",
    "elliptic": "^6.5.4",
    "express": "^4.17.1",
    "pem": "^1.14.6",
    "prom-client": "^14.0.1",
    "ps-tree": "^1.2.0",
    "redis": "^4.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-spies": "^1.0.3",
    "@types/dns-packet": "^5.2.4",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/pem": "^1.9.6",
    "@types/ps-tree": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "prettier": "^2.6.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
