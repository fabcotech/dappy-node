  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}",
      "args": [
        "--inspect-brk",
        "${relativeFile}"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]      
    }
  ]
}